
@{
    ViewData["Title"] = "Spor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<HaberViewModels>

<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <img src="~/Haber/@item.HaberResimData" width="250" height="250" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.HaberBaslik.Substring(0,25)....</h5>
                    <p class="card-text">@item.HaberDetay.Substring(0,50)...</p>
                    <a asp-action="HaberDetay" asp-controller="Home" asp-route-ıd="@item.Id"><p class="card-text"><small class="text-body-secondary"><button class="btn btn-primary"> Devamını oku </button></small></p></a>
                </div>
            </div>
        </div>
    }


</div>


